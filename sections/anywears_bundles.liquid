{% style %}

  .anywears-showcase {
    position: relative;
    width: 100%;
    height: fit-content;
    text-align: center;
    padding-top: 4em;
    padding-bottom: 4em;
  }

  .anywears-showcase-image {
    position: relative;
    display: inline-block !important;
    vertical-align: middle;
    height: 17em;
    width: 19em;
    background-color: #ccc;
    border-radius: 18px;
    background-position: center;
    background-size: cover;
    background-repeat: no-repeat;
    background-attachment: fixed;
    margin-left: 0.25em;
    margin-right: 0.25em;
  }

  .anywears-showcase-text {
    position: relative;
    display: inline-block;
    vertical-align: middle;
    height: 17em;
    max-width: 25em;
  }

  .anywears-showcase-text-inner {
    position: relative;
    display: table;
    vertical-align: middle;
    height: 100%;
    width: 100%;
  }

  .anywears-showcase-text-tc {
    position: relative;
    display: table-cell;
    padding: 0.5em;
    box-sizing: border-box;
    height: fit-content;
    width: 100%;
    text-align: right;
    vertical-align: middle;
  }

  .anywears-showcase-ttitle {
    position: relative;
    color: #F00;
    text-align: right;
    font-size: 2.2em;
    font-family: "Roboto Mono";
    letter-spacing: 0.77656rem;
    font-weight: 400;
    margin-bottom: 0.5em;
  }

  .anywears-description {
    position: relative;
    font-family: "Inter";
    line-height: 1.2em;
    font-size: 1.5em;
    color: #000;
  }

  .anywears-bundles {
    position: relative;
    width: 100%;
    display: flex;
    padding: 4em 0;
  }

  .bundles-image {
    position: relative;
    display: inline-block !important;
    height: 20em;
    width: 20em;
    margin-right: 1em;
    background-color: #ccc;
    border-radius: 18px;
    background-position: center;
    background-size: cover;
    background-repeat: no-repeat;
    background-attachment: fixed;
  }

  .anywears-bundles-inner {
    position: relative;
    width: 70%;
    left: 50%;
    transform: translateX(-50%);
  }

  .bundles-table-container {
    position: relative;
    display: inline-block;
    vertical-align: top;
  }

  .bundles-table-title {
    color: #FF0000;
    font-size: 2em;
    margin-bottom: 1em;
    vertical-align: top;
  }

  .bundles-table {
    position: relative;
    background-color: #F8F8F8;
    border-radius: 15px;
    overflow: hidden;
    border-collapse: collapse;
    border: 0;
    outline: none;
    font-size: 1.5em;
  }

  .bundles-table tr th {
    color: #FF0000;
    font-weight: normal;
    letter-spacing: 0.8em;
    text-transform: uppercase;
    text-align: center;
    padding: 1em;
  }

  .bundles-table tr td {
    padding: 0.6em;
    color: #000;
  }

  .bundles-table tr:nth-child(even) {
    background-color: #FFC2C2;
  }

  .check {
    position: relative;
    display: block !important;
    height: 1.5em;
    width: 1.5em;
    background-position: center;
    background-repeat: no-repeat;
    background-size: cover;
  }

  .noun {
    color: #FF7575;
    font-weight: bold;
  }

  .bold {
    font-weight: bold;
  }
{% endstyle %}